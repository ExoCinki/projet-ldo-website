{% extends 'base.html.twig' %}

{% block title %}LDO - Absence
{% endblock %}

{% block body %}
<div class="container">
	<h2 class="text-light text-center mt-3">
		<i class="fas fa-drafting-compass"></i>
		Crafting Time :
	</h2>
	{% if is_granted('ROLE_USER') %}
		<a href="{{path('absence_add')}}">
			<button type="button" class="btn btn-success">Ajouter</button>
		</a>
	{% endif %}
	<table class="table table-dark table-hover mt-5">
		<thead>
			<tr>
				<th scope="col">Pseudo</th>
				<th scope="col">Date de d√©but</th>
				<th scope="col">Date de fin</th>
			</tr>
		</thead>
		<tbody>
			{% for person in absence  %}
				<tr>
					<td>{{person.name}}</td>
					<td>{{person.debut|date('Y-m-d')}}</td>
					<td>{{person.fin|date('Y-m-d')}}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
{% endblock %}
