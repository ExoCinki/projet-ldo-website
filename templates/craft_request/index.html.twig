{% extends 'base.html.twig' %}

{% block title %}Liste des demande de craft
{% endblock %}

{% block body %}
	<div class="container">
		<h2 class="text-light text-center mt-3">
			<i class="fas fa-drafting-compass"></i>
			Crafting Time :
		</h2>
		{% if is_granted('ROLE_USER') %}
			<a href="{{path('craft_request_add')}}">
				<button type="button" class="btn btn-success">Ajouter</button>
			</a>
		{% endif %}
		<table class="table table-dark table-hover mt-5">
			<thead>
				<tr>
					<th scope="col">Objet a Craft</th>
					<th scope="col">Recette du Craft</th>
					<th scope="col">Quantité</th>
					<th scope="col">Statue</th>
					<th scope="col">Pseudo du demandeur</th>
					<th scope="col">Pseudo du Farmeur</th>
					<th scope="col">Créer le</th>
					{% if is_granted('ROLE_CRAFT') %}
						<th scope="col">Action</th>
					{% elseif is_granted('ROLE_ADMIN') %}
						<th scope="col">Action</th>
					{% endif %}
				</tr>
			</thead>
			<tbody>
				<tr>
					{% for craft in craftchecklist  %}
						<td>{{craft.title}}</td>
						<td>{{craft.details}}</td>
						<td>{{craft.quantity}}</td>
						<td>
							{% if craft.checkOrNot == 0 %}
								<i class="fas fa-times"></i>
								En Cours
							{% else %}
								<i class="far fa-check-circle"></i>
								Terminer
							{% endif %}
						</td>
						<td>{{craft.nameUser}}</td>
						<td>{{craft.farmeur}}</td>
						<td>{{craft.createdAt|date('Y-m-d')}}</td>
						{% if is_granted('ROLE_CRAFT') %}
							<td>
								<a href="{{path('craft_request_check', { id: craft.id })}}">
									<button type="submit" class="btn btn-success btn-lg text-center">
										<i class="far fa-check-circle"></i>
									</button>
								</a>
								<a href="{{path('craft_request_loading', { id: craft.id })}}">
									<button type="submit" class="btn btn-success btn-lg text-center">
										Je prend
									</button>
								</a>
							</td>
						{% elseif is_granted('ROLE_ADMIN') %}
							<td>
								<a href="{{path('craft_request_check', { id: farm.id })}}">
									<button type="submit" class="btn btn-success btn-lg text-center">
										<i class="far fa-check-circle"></i>
									</button>
								</a>
								<a href="{{path('craft_request_loading', { id: farm.id })}}">
									<button type="submit" class="btn btn-success btn-lg text-center">
										Je prend
									</button>
								</a>
							</td>
						{% endif %}
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<hr class="mt-3 mb-3 p-1"/>
		<h2 class="text-light text-center mt-5">
			<i class="fas fa-archive"></i>
			Demande traitée :
		</h2>
  	<table class="table table-dark table-hover mt-5">
			<thead>
				<tr>
