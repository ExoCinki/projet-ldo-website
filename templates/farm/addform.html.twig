{% extends 'base.html.twig' %}

{% block title %}LDO - Farming
{% endblock %}

{% block body %}
	<div class="container text-light">
		<h1 class="text-center m-5">
			<i class="fas fa-tractor"></i>
			Demande de Farm</h1>
		{{ form_start(form) }}
		<div class="row">
			<div class="col">
				{{ form_row(form.nameUser, {'value' : app.user.pseudo }) }}
			</div>
		</div>
		<div class="row">
			<div class="col">
				{{ form_row(form.title) }}
			</div>
		</div>
		<div class="row">
			<div class="col">
				{{ form_row(form.details) }}
			</div>
		</div>
		<div class="row">
			<div class="col text-center">
				<button type="submit" class="btn btn-primary btn-lg text-center">Enregistrer</button>
				{{ form_end(form) }}
			</div>
		</div>
	{% endblock %}
