{% extends 'base.html.twig' %}

{% block title %}Liste des Crafters
{% endblock %}

{% block body %}
	<div class="container">
		<h2 class="text-light text-center mt-3">
			<i class="fas fa-tractor"></i>
			Farming Time :
		</h2>
		<h6 class="text-light text-center mt-3">
			<i class="fas fa-shipping-fast"></i>
			MaeJhin Page
			<i class="fas fa-shipping-fast"></i>
		</h6>
		{% if is_granted('ROLE_USER') %}
			<a href="{{path('farm_add')}}">
				<button type="button" class="btn btn-success">Ajouter</button>
			</a>
		{% endif %}
		<table class="table table-dark table-hover mt-5">
			<thead>
				<tr>
					<th scope="col">Titre</th>
					<th scope="col">Description</th>
					<th scope="col">Statue</th>
					<th scope="col">Pseudo du demandeur</th>
					<th scope="col">Créer le
					</th>
					{% if is_granted('ROLE_FARM') %}
						<th scope="col">Action</th>
					{% elseif is_granted('ROLE_ADMIN') %}
						<th scope="col">Action</th>
					{% endif %}
				</tr>
			</thead>
			<tbody>
				<tr>
					{% for farm in farmchecklist  %}
						<td>{{farm.title}}</td>
						<td>{{farm.details}}</td>
						<td>
							{% if farm.checkOrNot == 0 %}
								<i class="fas fa-times"></i>
								En Cours
							{% else %}
								<i class="far fa-check-circle"></i>
								Terminer
							{% endif %}
						</td>
						<td>{{farm.nameUser}}</td>
						<td>{{farm.createdAt|date('Y-m-d')}}</td>
						{% if is_granted('ROLE_FARM') %}
							<td>
								<a href="{{path('farm_check', { id: farm.id })}}">
									<button type="submit" class="btn btn-success btn-lg text-center">
										<i class="far fa-check-circle"></i>
									</button>
								</a>
							</td>
						{% elseif is_granted('ROLE_ADMIN') %}
							<td>
								<a href="{{path('farm_check', { id: farm.id })}}">
									<button type="submit" class="btn btn-success btn-lg text-center">
										<i class="far fa-check-circle"></i>
									</button>
								</a>
							</td>
						{% endif %}
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<hr class="mt-3 mb-3 p-1"/>
		<h2 class="text-light text-center mt-5">
			<i class="fas fa-tractor"></i>
			Demande traitée :
		</h2>
  	<table class="table table-dark table-hover mt-5">
			<thead>
				<tr>
					<th scope="col">Titre</th>
					<th scope="col">Description</th>
					<th scope="col">Statue</th>
					<th scope="col">Pseudo du demandeur</th>
					<th scope="col">Créer le
					</th>
					{% if is_granted('ROLE_FARM') %}
						<th scope="col">Action</th>
					{% elseif is_granted('ROLE_ADMIN') %}
						<th scope="col">Action</th>
					{% endif %}
				</tr>
			</thead>
			<tbody>
				<tr>
					{% for farm in farmnotcheck  %}
						<td>{{farm.title}}</td>
						<td>{{farm.details}}</td>
						<td>
							{% if farm.checkOrNot == 0 %}
								<i class="fas fa-times"></i>
								En Cours
							{% else %}
								<i class="far fa-check-circle"></i>
								Terminer
							{% endif %}
						</td>
						<td>{{farm.nameUser}}</td>
						<td>{{farm.createdAt|date('Y-m-d')}}</td>
						{% if is_granted('ROLE_FARM') %}
							<td>
								<a href="{{path('farm_check', { id: farm.id })}}">
									<button type="submit" class="btn btn-success btn-lg text-center">
										<i class="far fa-check-circle"></i>
									</button>
								</a>
							</td>
						{% elseif is_granted('ROLE_ADMIN') %}
							<td>
								<a href="{{path('farm_check', { id: farm.id })}}">
									<button type="submit" class="btn btn-success btn-lg text-center">
										<i class="far fa-check-circle"></i>
									</button>
								</a>
							</td>
						{% endif %}
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<hr class="mt-3 mb-3 p-1"/>
{% endblock %}
