{% extends 'base.html.twig' %}

{% block title %}Liste des Crafters{% endblock %}

{% block body %}
<div class="container">
 <h2 class="text-light text-center mt-3"><i class="fas fa-tractor"></i> Farming Time : </h2>  
 <h6 class="text-light text-center mt-3"><i class="fas fa-shipping-fast"></i> MaeJhin Page <i class="fas fa-shipping-fast"></i></h6>
 {% if is_granted('ROLE_USER') %}
    <a href="{{path('farm_add')}}"><button type="button" class="btn btn-success">Ajouter</button></a>
 {% endif %}
 <table class="table table-dark table-hover mt-5">
  <thead>
    <tr>
      <th scope="col">Titre</th>
      <th scope="col">Description</th>
      <th scope="col">Statue</th>
      <th scope="col">Pseudo du demandeur</th>
      <th scope="col">Cr√©er le </th>
    </tr>
  </thead>
  <tbody>
    <tr>
    {# {{farm.checkOrNot}} #}
    {% for farm in farmlist  %}
      <td>{{farm.title}}</td>
      <td>{{farm.details}}</td>
      <td>{% if farm.checkOrNot == 0 %} <i class="fas fa-times"></i> {% else %} <i class="far fa-check-circle"></i> {% endif %}</td>
      <td>{{farm.nameUser}}</td>
      <td>{{farm.createdAt|date('Y-m-d')}}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
</div>
<hr class="mt-3 mb-3 p-1"/>
{% endblock %}
