{% extends 'base.html.twig' %}

{% block title %}Ligue des Ombres{% endblock %}

{% block body %}
<h1 class="text-light text-center m-5"><i class="far fa-newspaper"></i> News,Update :</h1>
{% for new in news %}
<div class="container text-light text-center mt-3">
    <div class="row">
        <div class="col rounded bg-dark">
            <img src="{{new.picture}}" class="img-fluid m-2 bg-info rounded" alt="" srcset="">
            <div class="col bg-dark rounded">
            <h1 class=" rounded">{{new.title}}</h1>
            <p class="">{{new.content}}</p>
        </div>
        </div>
    </div>
</div>
{% endfor %}
{% endblock %}